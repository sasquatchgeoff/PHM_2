<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_centerVertical="true"
        android:id="@+id/emergencyPhoneField"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergencyPhoneField"
        android:layout_centerHorizontal="true"
        android:id="@+id/saveEmergencyPhonebtn"
        android:onClick="saveEmergencyPhone"/>

    <TextView
        android:text="Please enter the emergency contact number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpTextFallSetting"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>